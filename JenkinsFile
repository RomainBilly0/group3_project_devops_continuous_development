pipeline {
    agent any

    triggers {
        githubPush()
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Create version tag with short git commit
                    commit = sh(script: "git rev-parse --short HEAD", returnStdout: true).trim()

                    // Build the image: go-api:<commit>
                    dockerImage = docker.build("go-api:${commit}")
                }
            }
        }

        stage('Run Container (test)') {
            steps {
                script {
                    docker.withRun("-p 8080:8080") { c ->
                        // basic test
                        sh "sleep 3"
                        sh "curl http://localhost:8080/"
                    }
                }
            }
        }

        stage('Tag and Save Latest') {
            steps {
                script {
                    sh "docker tag go-api:${commit} go-api:latest"
                }
            }
        }
    }
}
